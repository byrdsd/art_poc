<section class='Blocks'>
  <a href="/admin/blocks/new" class="Blocks-action">New Block</a>
  <% @blocks.each do |block| %>
    <div class='Block'>
      <%= block[:title] %>
      <a href="/admin/blocks/<%= block[:id] %>/edit" class="Block-action">Edit</a>
      <button data-block-action='delete' data-block-id='<%= block[:id] %>' class="Block-delete">Delete</button>
    </div>
  <% end %>
</section>
